{
  "name": "@nurl-inc/website",
  "type": "module",
  "scripts": {
    "clean": "rm -rf src/content/legal/generated src/content/blog/generated",
    "generate": "deno --allow-read --allow-write ./src/scripts/generate.ts",
    "dev": "pnpm run clean && pnpm run generate && vinxi dev",
    "build": "pnpm run clean && pnpm run generate && vinxi build",
    "start": "pnpm run clean && pnpm run generate && vinxi start",
    "prepare": "husky && panda codegen",
    "lint:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@fontsource-variable/montserrat": "^5.1.0",
    "@fontsource-variable/saira": "^5.1.0",
    "@kobalte/core": "^0.13.7",
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.1",
    "@solidjs/start": "^1.0.10",
    "dompurify": "^3.2.2",
    "marked": "^15.0.3",
    "motion": "^11.13.1",
    "remove": "^0.1.5",
    "solid-js": "^1.9.2",
    "vinxi": "^0.4.3"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.48.0",
    "@types/dompurify": "^3.2.0",
    "@types/marked": "^6.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "prettier": "3.3.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-code-frontmatter": "^1.0.0",
    "remark-directive": "^3.0.0",
    "remark-directive-rehype": "^0.4.2",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "typescript": "^5.7.2",
    "unified": "^11.0.5",
    "vite-tsconfig-paths": "^5.1.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=18"
  }
}
